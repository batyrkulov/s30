.form__first__input {
  width: 100%;
  height: 54px;
  display: block;
  box-shadow: inset 4px 4px 8px var(--input-box-shadow-color);
  background-color: var(--input-bg-color);
  border-radius: 4px;
  border: 1px solid var(--input-border-color);
  color: var(--input-text-color);
  font-size: 14px;
  font-style: normal;
  font-weight: normal;
  line-height: 18px;
  padding: 0 4% 0 4%;
}

